<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentPortal.styles.css" asp-append-version="true" />

    <!-- Favicon (Optional) -->
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body>
    <!-- ======= Header / Navbar ======= -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">StudentPortal</a>

                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Home") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Privacy") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Student Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="studentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Students
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="studentDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Students" asp-action="Add">Add Student</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Students" asp-action="List">All Students</a>
                                </li>
                            </ul>
                        </li>

                        <!-- Courses Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="courseDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Courses
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="courseDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="Add">Add Course</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="List">All Courses</a>
                                </li>
                            </ul>
                        </li>
                        <!-- Teacher Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="courseDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                               Teachers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="courseDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="Add">Add Teachers</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="List">All Teachers</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ======= Main Content ======= -->
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- ======= Footer ======= -->
    <footer class="bg-light text-center text-muted py-3 border-top mt-auto">
        <div class="container">
            &copy; 2026 - <strong>StudentPortal</strong> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- ======= Scripts ======= -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
