@model StudentPortal.Models.AddTeacherViewModel;


@if (TempData["Successmessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"];
        <button type="button" class="btn btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-center align-items-center " >
    <form method="post" class="card shadow p-2" style="width:500px">

        <div class="container mt-2">
            <label class="form-label">Teacher Name</label>
            <input type="text" class="form-control" asp-for="TeacherName" />
        </div>
        <div class="container mt-2">
            <label class="form-label">Teacher Email</label>
            <input type="email" class="form-control" asp-for="TeacherEmail" />
        </div>
        <div class="container mt-2">
            <label class="form-label">Teacher Phone</label>
            <input type="number" class="form-control" asp-for="TeacherPhone" />
        </div>
        <div class="container mt-2">
            <button class="btn btn-outline-danger " >Save</button>
        </div>

    </form>

</div>