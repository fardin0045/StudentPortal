@model List<StudentPortal.Models.Entites.Courses>

<h1 class="mb-3">All Courses</h1>

<table class="table table-striped table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col"># </th>
            <th scope="col">Course Name </th>
            <th scope="col">Course Code</th>
            <th scope ="col">Course Credit</th>
            <th scope="col">Actions </th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach(var course in Model)
        {
            <tr class=" table-borderless">
                <td>@counter</td>
                <td>@course.CourseName</td>
                <td>@course.CourseCode</td>
                <td>@course.Credit </td>
                <td>
                    <!-- Edit (GET)-->
                    <a class="btn btn-warning btn-sm w-100 " asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                    <!--Delete (POST)-->
                    <form asp-controller="Course"
                        asp-action="Delete"
                        asp-route-id="@course.Id"
                        method="post"
                        onsubmit=" retrurn confirm('Are you sure you want to delete ?')">
                        <button style=" color:black" class="btn btn-outline-light mt-2 btn-sm w-100 " type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>