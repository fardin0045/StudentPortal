@{
}
@model StudentPortal.Models.Entites.Courses
<h1>Edit Course</h1>
@if(Model is null)
{
    <h1>No Course Found </h1>
}
else
{
    <form method="post">
        <div class="container mt-3">
            <label class="form-label">Course Name </label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="container mt-3">
            <label class="form-label">Course Name </label>
            <input type="text" class="form-control" asp-for="CourseName" />
        </div>
        <div class="container mt-3">
            <label class="form-label">Course Code </label>
            <input type="text" class="form-control" asp-for="CourseCode" />
        </div>
        <div class="container mt-3">
            <label class="form-label">Course Credit </label>
            <input type="text" class="form-control" asp-for="Credit" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">
                Save
            </button>

        </div>
    </form>
}
