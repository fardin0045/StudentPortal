@model StudentPortal.Models.AddCourseViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card border-0 shadow-lg rounded-4">

                <!-- Header -->
                <div class="card-header bg-gradient bg-primary text-white text-center py-4 rounded-top-4">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-journal-plus me-2"></i>
                        Add New Course
                    </h3>
                    <small class="opacity-75">Create and manage academic courses</small>
                </div>

                <div class="card-body p-5">

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-3" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>Success!</strong> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <form method="post" novalidate>

                        <!-- Course Name -->
                        <div class="form-floating mb-4">
                            <input asp-for="CourseName" class="form-control rounded-3" placeholder="Course Name" />
                            <label asp-for="CourseName">
                                <i class="bi bi-book me-1"></i> Course Name
                            </label>
                            <span class="text-danger small" asp-validation-for="CourseName"></span>
                        </div>

                        <!-- Course Code -->
                        <div class="form-floating mb-4">
                            <input asp-for="CourseCode" class="form-control rounded-3" placeholder="Course Code" />
                            <label asp-for="CourseCode">
                                <i class="bi bi-hash me-1"></i> Course Code
                            </label>
                            <span class="text-danger small" asp-validation-for="CourseCode"></span>
                        </div>

                        <!-- Course Credit -->
                        <div class="form-floating mb-4">
                            <input asp-for="Credit" type="number" min="0" step="0.5" class="form-control rounded-3" placeholder="Credit" />
                            <label asp-for="Credit">
                                <i class="bi bi-award me-1"></i> Course Credit
                            </label>
                            <span class="text-danger small" asp-validation-for="Credit"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>

                            <button type="submit" class="btn btn-primary rounded-3 px-4 shadow-sm">
                                <i class="bi bi-save2 me-1"></i> Save Course
                            </button>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}