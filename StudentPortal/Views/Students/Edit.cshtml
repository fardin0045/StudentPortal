@{
}
@model StudentPortal.Models.Entites.Student

<h1>Edit Student</h1>
@if (TempData["Successmessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"];
        <button type="button" class="btn btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (Model is null)
{
    <p>No student was found</p>
}
else
{
<form method="post">
    <div class="container mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="container mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="container mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for=Email />
    </div>
    <div class="container mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>
    <div class="container mt-3">

        <input type="checkbox" class="form-control form-check-input" asp-for="Subscribe" />
        <label class="form-check-label">Subscribed </label>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-outline-primary">Save</button>
        <button type="submit" class="btn btn-outline-primary" asp-action="Delete" asp-controller="Students">Delete</button>
    </div>
</form>
}